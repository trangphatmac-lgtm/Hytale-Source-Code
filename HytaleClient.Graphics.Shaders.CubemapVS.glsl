#version 330 core

//-------------------------------------------------------------------------------------------------------------------------
//                                  Shader Params
//-------------------------------------------------------------------------------------------------------------------------
uniform mat4 uMVPMatrix;

//-------------------------------------------------------------------------------------------------------------------------
//                                  Vertex Attributes
//-------------------------------------------------------------------------------------------------------------------------
in vec3 vertPosition;

//-------------------------------------------------------------------------------------------------------------------------
//                                  Out
//-------------------------------------------------------------------------------------------------------------------------
out vec3 fragTexCoords;

//-------------------------------------------------------------------------------------------------------------------------

void main()
{
    fragTexCoords = vertPosition;

    vec4 pos = uMVPMatrix * vec4(vertPosition, 1.0);
    gl_Position = pos.xyww;
}
