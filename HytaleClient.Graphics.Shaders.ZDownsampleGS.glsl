#version 330 core

//-------------------------------------------------------------------------------------------------------------------------
//                                  In
//-------------------------------------------------------------------------------------------------------------------------
layout(points) in;

//-------------------------------------------------------------------------------------------------------------------------
//                                  Out
//-------------------------------------------------------------------------------------------------------------------------
layout(triangle_strip, max_vertices = 4) out;
out vec2 fragTexCoords;

//-------------------------------------------------------------------------------------------------------------------------

void main() 
{
    gl_Position = vec4( 1.0, 1.0, 0.5, 1.0 );
    fragTexCoords = vec2( 1.0, 1.0 );
    EmitVertex();

    gl_Position = vec4(-1.0, 1.0, 0.5, 1.0 );
    fragTexCoords = vec2( 0.0, 1.0 );
    EmitVertex();

    gl_Position = vec4( 1.0,-1.0, 0.5, 1.0 );
    fragTexCoords = vec2( 1.0, 0.0 );
    EmitVertex();

    gl_Position = vec4(-1.0,-1.0, 0.5, 1.0 );
    fragTexCoords = vec2( 0.0, 0.0 );
    EmitVertex();

    EndPrimitive();
}
