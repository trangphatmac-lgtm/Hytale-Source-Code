#version 330 core

//-------------------------------------------------------------------------------------------------------------------------
//                                  Shader Params
//-------------------------------------------------------------------------------------------------------------------------
#if ALPHA_TEST
uniform sampler2D uTexture;
#endif

//-------------------------------------------------------------------------------------------------------------------------
//                                  In
//-------------------------------------------------------------------------------------------------------------------------
#if ALPHA_TEST
in vec2 fragTexCoords;
#endif

//-------------------------------------------------------------------------------------------------------------------------
//                                  Out
//-------------------------------------------------------------------------------------------------------------------------
// none : we write in gl_FragDepth (implicitely)

//-------------------------------------------------------------------------------------------------------------------------

void main()
{
#if ALPHA_TEST
    float opacity = texture(uTexture, fragTexCoords).a;

    if (opacity == 0.0) discard;
#endif
}
